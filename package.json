{
  "name": "m-fs",
  "version": "2.3.4",
  "description": "Common Node.js file system promises API",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "author": "Mgen (https://www.mgenware.com)",
  "homepage": "https://github.com/mgenware/m-fs",
  "bugs": "https://github.com/mgenware/m-fs/issues",
  "keywords": [
    "fs",
    "file system"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mgenware/m-fs.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "yarn run clean && yarn run compile && yarn run lint && yarn run t",
    "t": "mocha dist_tests/**/*.test.js",
    "build": "cross-env NODE_ENV=production yarn test",
    "compile": "tsc -b tests",
    "dev": "cross-env NODE_ENV=development yarn run clean && tsc -b tests -w",
    "prepublishOnly": "yarn run test",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "clean": "del-cli dist && del-cli dist_tests"
  },
  "files": [
    "/dist/**/*.js",
    "/dist/**/*.ts",
    "/dist/**/*.map"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.5",
    "cross-env": "^7.0.2",
    "del-cli": "^3.0.0",
    "mocha": "^7.1.1",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "make-dir": "^3.0.2",
    "node-filter-async": "^2.0.0"
  }
}
